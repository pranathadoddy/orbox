<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta http-equiv="Content-Language" content="en" />
    <meta name="msapplication-TileColor" content="#206bc4" />
    <meta name="theme-color" content="#206bc4" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="HandheldFriendly" content="True" />
    <meta name="MobileOptimized" content="320" />
    <meta name="robots" content="noindex,nofollow,noarchive" />
    <link rel="icon" href="https://cdn.orbox.id/obox/assets/img/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="https://cdn.orbox.id/obox/assets/img/favicon.ico" type="image/x-icon" />
    <title>Orderbox - @ViewData["Title"]</title>

    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

    <environment include="Development">
        <link rel="stylesheet" href="~/dist/app-user-dev.min.css" />
    </environment>
    <environment include="Staging,Production">
        <link rel="stylesheet" href="~/dist/app-user-prod.min.css" />
    </environment>
</head>
<body class="antialiased">
    <div class="wrapper">
        <div class="content">
            @{ await Html.RenderPartialAsync("UserLayout/_NavBar"); }
            @RenderBody()
        </div>
    </div>
    <footer class="footer bg-white pb-4 pt-4 border-top" style="border-top-color: rgba(53, 64, 82, 0.16);">
        <div class="container">
            <div class="row align-items-center flex-row-reverse">
                <div class="col-auto ml-lg-auto">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            Orderbox © 2020
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <environment include="Development">
        <script defer src="~/dist/app-user-dev.js" type="text/javascript"></script>
    </environment>
    <environment include="Staging,Production">
        <script defer src="~/dist/app-user-prod.min.js" type="text/javascript"></script>
    </environment>
    @await RenderSectionAsync("scripts", false)
</body>
</html>