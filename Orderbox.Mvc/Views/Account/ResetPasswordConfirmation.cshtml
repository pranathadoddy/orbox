@{
    Layout = "_PlainLayout";
}

@using Framework.Core.Resources
@using Orderbox.Core.Resources.Account

<div id="page" class="container">
    <div class="row">
        <div class="col col-login mx-auto">
            <div class="text-center my-5 login-logo">
                <img src="https://cdn.orbox.id/obox/assets/img/logo.png" class="py-2" />
                Orderbox
            </div>
            <div class="card">
                <div class="card-body p-3 p-md-6">
                    <div class="card-title">@ResetPasswordResource.ResetSuccessTitle</div>
                    <div class="alert alert-success">@ResetPasswordResource.ResetSuccessConfirmation</div>
                    
                    <a href="/Account/Login" class="btn btn-block btn-primary">@GeneralResource.General_SignIn</a>
                </div>
            </div>
        </div>
    </div>
</div>