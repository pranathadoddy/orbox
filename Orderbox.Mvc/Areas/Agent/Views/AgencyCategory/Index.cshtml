@using Framework.Core.Resources
@using Framework.Application.Presentation.HtmlHelperExtensions
@using Orderbox.Core.Resources.Common

<div page class="content-page">
    <main class="container my-4 flex-fill">
        <div class="page-title-box">
            <div class="row align-items-center">
                <div class="col-auto">
                    <!-- Page pre-title -->
                    <div class="page-pretitle">
                        List
                    </div>
                    <h2 class="page-title">
                        Agency Category
                    </h2>
                </div>
            </div>
        </div>
        <div class="row row-deck">
            <div class="col-12">
                <div class="card">
                    <table grid
                           class="table table-striped table-hover bootgrid-table"
                           data-url="/Agent/AgencyCategory/PagedSearchGridJson"
                           data-edit-url="/Agent/AgencyCategory/Edit"
                           id="merchant">
                        <thead>
                            <tr>
                                <th data-column-id="id" data-formatter="Edit" data-header-css-class="w-7"></th>
                                <th data-column-id="name">@TenantResource.Name</th>
                            </tr>
                        </thead>
                    </table>
                    <div class="card-footer">
                        @Html.LinkButtonWithLabel(
                                     string.Format("<i class='fa fa-plus'></i> {0}", GeneralResource.General_Add),
                                     id: "link-add",
                                     cssClass: "btn-primary",
                                     href: $"/Agent/AgencyCategory/Create"
                                 )
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

@section scripts {
    <script defer type="text/javascript">
        window.addEventListener('DOMContentLoaded', function () {
            var page = new AgentAgencyCategoryIndex.default($('[page]'));
            page.register();
        });
    </script>
}