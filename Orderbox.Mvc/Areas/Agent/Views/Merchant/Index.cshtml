@using Framework.Application.Presentation.HtmlHelperExtensions
@using Orderbox.Core.Resources.Common
@model Orderbox.Mvc.Areas.Agent.Models.Merchant.IndexModel
@{
    ViewData["Title"] = "Merchant";
}

<div page class="content-page">
    <main class="container my-4 flex-fill">
        <div class="page-title-box">
            <div class="row align-items-center">
                <div class="col-auto">
                    <!-- Page pre-title -->
                    <div class="page-pretitle">
                        List
                    </div>
                    <h2 class="page-title">
                        Merchant
                    </h2>
                </div>
            </div>
        </div>
        <div class="row row-deck">
            <div class="col-12">
                <div class="card">
                    <table grid
                           class="table table-striped table-hover bootgrid-table"
                           data-url="/Agent/Merchant/PagedSearchGridJson"
                           data-edit-url="/Agent/Order/Index"
                           id="merchant">
                        <thead>
                            <tr>
                                <th data-column-id="id" data-formatter="Edit" data-header-css-class="w-7"></th>
                                <th data-column-id="name">@TenantResource.Name</th>
                                <th data-formatter="Active">@TenantResource.ShopActive</th>
                            </tr>
                        </thead>
                    </table>
                    <div class="card-footer">
                        @Html.LinkButtonWithLabel(
                             string.Format("<i class='fa fa-copy mr-2'></i> {0}", TenantResource.CopyRegistrationLink),
                             id: "link-copy",
                             cssClass: "btn-primary",
                             href: Model.MerchantRegistrationUrl
                         )
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

@section scripts {
    <script defer type="text/javascript">
        window.addEventListener('DOMContentLoaded', function () {
            var page = new AgentMerchantIndex.default($('[page]'));
            page.register();
        });
    </script>
}