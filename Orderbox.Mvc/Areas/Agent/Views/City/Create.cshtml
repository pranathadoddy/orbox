@using Framework.Application.Presentation
@using Framework.Core.Resources
@using Framework.Application.Presentation.HtmlHelperExtensions
@model Orderbox.Mvc.Areas.Agent.Models.City.CreateModel
@{
    ViewData["Title"] = "Merchant Business Operation";
}

<div page class="content-page">
    <main class="container my-4 flex-fill">
        <div class="page-title-box">
            <div class="row align-items-center">
                <div class="col-auto">
                    <div class="page-pretitle">
                        Create
                    </div>
                    <h2 class="page-title">
                        City
                    </h2>
                </div>
            </div>
        </div>

        <div class="row row-deck">
            <div class="col-12">
                <div class="card">
                    @using (Html.BeginForm("Create", "City", FormMethod.Post))
                    {
                    <div class="card-body">
                        @Html.HiddenFor(model => model.CountryId)
                        @Html.TextEditorFor(model => model.Name, "mb-2")
                    </div>
                        <div class="card-footer">
                            @Html.ButtonWithLabel(
                                string.Format("<i class='fa fa-save mr-1'></i> {0}", GeneralResource.General_Save),
                                buttonType: PresentationConstant.ButtonType.Submit,
                                id: "btn-save",
                                cssClass: "btn-primary")
                            @Html.LinkButtonWithLabel(
                                string.Format("<i class='fa fa-remove mr-1'></i> {0}", GeneralResource.General_Cancel),
                                id: "link-cancel",
                                cssClass: "btn-link",
                                href: $"/Agent/Country/Edit/{Model.CountryId}")
                        </div>
                    }
                </div>
            </div>
        </div>
    </main>
</div>

@section scripts {
    <script defer type="text/javascript">
        window.addEventListener('DOMContentLoaded', function () {
            var page = new AgentCityCreate.default($('[page]'));
            page.register();
        });
    </script>
}